<%- include('../shares/header') %>
  <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.15/css/jquery.dataTables.css">

  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <%- include('../shares/menu') %>
        <div id="page-wrapper">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">分类列表</h1>
            </div>
            <!-- /.col-lg-12 -->
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      分类列表
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                      <div class="table-responsive">
                        <table id="table_id_example" class="table table-striped table-bordered table-hover">
                          <thead>
                            <tr>
                              <th>ID</th>
                              <th>分类名称</th>
                              <th>操作</th>
                            </tr>
                          </thead>
                          <tbody>
                            <%for(var i=0;i<cates.length;i++){%>
                              <tr>
                                <td>
                                  <%=cates[i]._id%>
                                </td>
                                <td>
                                  <%=cates[i].name%>
                                </td>
                                <td>
                                  <a class="btn btn-xs btn-info" href="/category/<%=cates[i]._id%>/edit">修改</a>
                                  <a class="btn btn-xs btn-danger" href="/category/<%=cates[i]._id%>/delete" class>删除</a></td>
                              </tr>
                              <%}%>
                          </tbody>
                        </table>
                      </div>
                      <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
                </div>
              </div>
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
  </body>
  <%- include('../shares/footer') %>
    <script>
    $('.nickname').dblclick(function() {
      var aaa = $(this)
      var nickname = $(this).html().trim();
      var input = $('input');
      input.focus();
      $(this).html('');
      console.log(input)
      $(this).append(input);
      input.val(nickname);
      input.select();
      input.blur(function() {
        var newNickname = $(this).val();
        var _id = $(this).parents('tr').find('td:first').html().trim();
        $.get('/user/update', { id: _id, nickname: newNickname }, function(data) {
          if (data.code == 0) {
            alert(data.msg);
            aaa.html(newNickname);
          }
        })
      })
    });
    $(document).ready(function() {

      $('#table_id_example').DataTable();

    });
    </script>
    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="http://cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>