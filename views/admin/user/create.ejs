<%- include('../shares/header')%>

  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <%- include('../shares/menu')%>
        <div id="page-wrapper">
          <%if (message) {%>
            <div class="alert alert-danger text-center">
              <%=message%>
            </div>
            <%}%>
              <div class="row">
                <div class="col-lg-12">
                  <h2 class="page-header text-center">用户添加</h2>
                </div>
                <!-- /.col-lg-12 -->
              </div>
              <div class="col-lg-4 col-md-offset-4">
                <form role="form" action="/user" enctype="multipart/form-data" method="post">
                  <div class="form-group">
                    <label>邮箱</label>
                    <input class="form-control" name="email" type="email">
                  </div>
                  <div class="form-group">
                    <label>昵称</label>
                    <input class="form-control" placeholder="" type="text" name="nickname">
                  </div>
                  <div class="form-group">
                    <label>密码</label>
                    <input class="form-control" placeholder="" type="password" name="password">
                  </div>
                  <div class="form-group">
                    <label>确认密码</label>
                    <input class="form-control" placeholder="" type="password" name="repassword">
                  </div>
                  <div class="form-group">
                    <label>头像</label>
                    <input type="file" name="profile">
                  </div>
                  <button type="submit" class="btn btn-default">添加</button>
                  <button type="reset" class="btn btn-default">重置</button>
                </form>
              </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
  </body>
  <%- include('../shares/footer')%>