<%- include('../shares/header') %>
  <link rel="stylesheet" href="/bower_components/editor.md/css/editormd.min.css">

  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <%- include('../shares/menu') %>
        <div id="page-wrapper">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">星文添加</h1>
            </div>
            <!-- /.col-lg-12 -->
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  星文添加
                </div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-12">
                      <form role="form" method="post" action="/xingzuo" enctype="multipart/form-data">
                        <div class="form-group">
                          <label>标题</label>
                          <input type="text" name="title" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>作者</label>
                          <input type="text" name="author" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>来源</label>
                          <input type="text" name="from" class="form-control">
                        </div>
                        <div class="form-group">
                          <label>星文内容</label>
                          <div id="editormd">
                            <textarea name="content" class="form-control"></textarea>
                          </div>
                        </div>
                        <div class="form-group">
                          <label>星文图片</label>
                          <input name="img" type="file">
                        </div>
                        <button type="submit" class="btn btn-default">添加</button>
                        <button type="reset" class="btn btn-default">重置</button>
                      </form>
                    </div>
                  </div>
                  <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
  </body>
  <%- include('../shares/footer') %>
    <script src="/bower_components/editor.md/editormd.min.js"></script>
    <script type="text/javascript">
    $(function() {
      var editor = editormd("editormd", {
        path: "/bower_components/editor.md/lib/",
        height: 500,
        imageUpload: true,
        imageFormats: ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
        imageUploadURL: "/uploads",
      });
    });
    </script>